{
    "name": "medlearn-lms",
    "version": "1.0.0",
    "type": "module",
    "sideEffects": [
        "node_modules/intl-tel-input/build/js/utils.js"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "watch": "parcel watch \"src/client/public/*.html\" \"src/client/secure/*.html\" --dist-dir dist --public-url /",
        "server": "nodemon src/server/server.js",
        "dev": "npm-run-all --parallel clean watch server",
        "build:public": "parcel build \"src/client/public/*.html\" --dist-dir dist --public-url /",
        "build:secure": "parcel build \"src/client/secure/*.html\" --dist-dir dist/secure --public-url /secure",
        "build": "npm-run-all --parallel build:public build:secure",
        "start": "NODE_ENV=production node src/server/server.js"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.7",
        "cookie-session": "^2.1.0",
        "cors": "^2.8.5",
        "express": "^4.21.1",
        "express-session": "^1.18.1",
        "express-validator": "^7.2.1",
        "intl-tel-input": "^25.3.1",
        "libphonenumber-js": "^1.12.10",
        "mysql2": "^3.11.3",
        "nodemailer": "^7.0.5",
        "path-to-regexp": "^8.1.0",
        "smtp-client": "^0.4.0"
    },
    "devDependencies": {
        "parcel": "^2.15.4",
        "nodemon": "^3.1.10",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.0"
    }
}
