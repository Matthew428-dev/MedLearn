{
    "name": "medlearn-lms",
    "version": "1.0.0",
    "type": "module",
    "sideEffects": [
        "node_modules/intl-tel-input/build/js/utils.js"
    ],
    "scripts": {
        "clean": "rimraf .parcel-cache dist",
        "watch": "parcel watch \"src/client/public/*.html\" \"src/client/secure/**/*.html\" --dist-dir dist --public-url /",
        "server": "nodemon src/server/server.js",
        "dev": "npm-run-all --parallel clean watch server",
        "build:public": "parcel build \"src/client/public/*.html\" --dist-dir dist --public-url /",
        "build:secure": "parcel build \"src/client/secure/**/*.html\" --dist-dir dist/secure --public-url /secure",
        "build": "npm-run-all --parallel build:public build:secure",
        "start": "NODE_ENV=production node src/server/server.js"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.7",
        "express": "^4.21.1",
        "express-session": "^1.18.1",
        "express-validator": "^7.2.1",
        "form-data": "^4.0.4",
        "intl-tel-input": "^25.3.1",
        "mailgun.js": "^12.0.3",
        "multer": "^2.0.2",
        "mysql2": "^3.11.3",
        "sharp": "^0.34.3"
    },
    "devDependencies": {
        "assert": "^2.1.0",
        "browserify-zlib": "^0.2.0",
        "buffer": "^6.0.3",
        "crypto-browserify": "^3.12.1",
        "events": "^3.3.0",
        "nodemon": "^3.1.10",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.15.4",
        "path-browserify": "^1.0.1",
        "process": "^0.11.10",
        "querystring-es3": "^0.2.1",
        "rimraf": "^5.0.0",
        "stream-browserify": "^3.0.0",
        "stream-http": "^3.2.0",
        "tailwindcss": "^3.4.17",
        "url": "^0.11.4",
        "util": "^0.12.5",
        "vm-browserify": "^1.1.2"
    }
}
